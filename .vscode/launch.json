    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-chrome",
            "request": "launch",
            "name": "Direct Debug",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}/my-first-app",
        },
        {
            "type": "pwa-chrome",
            "request": "launch",
            "name": "Debug - Launch Chrome against localhost",
            "url": "http://localhost:4200",
            "preLaunchTask": "npm: start - my-first-app",
            "webRoot": "${workspaceFolder}/my-first-app",
        }
    ]
}